<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/xButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageButton
        android:id="@+id/eventCloseButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/x"
        android:background="@android:color/transparent"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!-- Date and "Route Me" Button -->
    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Oct 31, 2024, 04:00PM"
        app:layout_constraintEnd_toStartOf="@+id/routeMeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventTitle"
        app:layout_constraintBottom_toBottomOf="@id/detailsButton"/>
    <!-- ImageView for the SVG icon -->
    <ImageView
        android:id="@+id/routeMeIcon"
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:src="@drawable/info"
        app:layout_constraintTop_toBottomOf="@id/eventTitle"
        app:layout_constraintEnd_toStartOf="@id/detailsButton"
        app:layout_constraintBottom_toBottomOf="@id/detailsButton"
        android:layout_marginEnd="2dp"/>
    <Button
        android:id="@+id/detailsButton"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="@string/details_button_text"
        android:textColor="@color/usc_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eventTitle" />
    <!-- Address and "Details" Button -->

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="230dp"
        android:text="801-899 Childs Way, Los Angeles, CA 90089"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/routeMeButton"
        app:layout_constraintEnd_toStartOf="@+id/detailsButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/detailsIcon"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:src="@drawable/map"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintEnd_toStartOf="@id/routeMeButton"
        app:layout_constraintBottom_toBottomOf="@id/routeMeButton"
        android:layout_marginEnd="4dp"/>
    <Button
        android:id="@+id/routeMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="@string/route_me_button_text"
        android:textColor="@color/usc_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date" />
    <!-- "Does the event exist?" Text and Buttons -->
    <TextView
        android:id="@+id/eventExistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Does the event exist?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintBottom_toBottomOf="@id/checkButton"/>
    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/usc_red"
        android:text="3"
        android:textColor="@color/white"
        android:drawableStart="@drawable/checkmark"
        android:drawableTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/xButton"
        app:layout_constraintTop_toBottomOf="@id/address" />
    <Button
        android:id="@+id/xButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="3"
        android:textColor="@color/white"
        android:drawableStart="@drawable/x"
        android:backgroundTint="@color/usc_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address" />
    <View
        android:id="@+id/backgroundView"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xButton"
        android:layout_marginStart="-16dp"
        android:layout_marginEnd="-16dp"/>
    <Button
        android:id="@+id/viewCommentsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/usc_red"
        android:text="View 45 comments"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xButton" />
</androidx.constraintlayout.widget.ConstraintLayout>